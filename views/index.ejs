<!DOCTYPE html>
<html lang="fr">

<body class="container">

<main>
    <div class="jumbotron">
        <h1>This is great</h1>
        <p><%= tagline %></p>
        <table border="1px">
            <% items.forEach(function(item) { %>
            <tr>
                <td>    <%= item.getName() %>  
                            <img width="128px" height="128px"  src=" <%= item.image_url %> "> 
                </td>
                <td>
                    <%= item.price %> $
                    <br>
                    <%= item.suggested_price  %> $ 
                </td>
                
            </tr>
            <% }); %>
        </table>
    </div>
</main>

</body>
</html>